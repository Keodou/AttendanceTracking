@model IQueryable<Student>

@{
    ViewData["Title"] = "Электронный журнал";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name = "viewport" content="width-device-width" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </head>
    <body>
        <div class="panel-text-table">
            <h2>Журнал учета посещаемости студентов</h2>
            <select class="form-control" asp-action="Attendance">
                  <option value="">90001995</option>
                  <option value="true">90001996</option>
                  <option value="false">9000199</option>
            </select>
            <div class="text-center">
            </div>
                <table class="table table-sm table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Имя</th>
                            <th>Группа</th>
                            <th>Посещаемость</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Student entity in Model) {
                            <tr>
                                <td>@entity.Name</td>
                                <td>@entity.Group</td>
                                <td>@entity.Attendance</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
    </body>
</html>