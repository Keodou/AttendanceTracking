@model AttendanceTracking.Models.User
@{
    ViewData["Title"] = "LoginForm";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Авторизация | Login</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/style-login.css" />
    </head>
    <body>
        <div class="panel panel-success">
            <div class="panel-heading text-center"><h2>Войти</h2></div>
            <div class="panel-body">
                <form class="p-1" asp-action="LoginForm" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Name">Имя пользователя:</label>
                        <input class="form-control" asp-for="Name" />
                    </div>
                    <div class="form-group"> 
                        <label asp-for="Password">Пароль:</label>
                        <input class="form-control" asp-for="Password" />
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">
                            Войти
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
